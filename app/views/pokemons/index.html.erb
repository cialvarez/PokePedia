<h1>Pokedex</h1>

<head>
  <title>Pokedex</title>

</head>


<body>
  <%= link_to 'New Pokemon', new_pokemon_path %>
  <table>
    <tr>
      <th>Pokemon</th>
      <th>Type 1</th>
      <th>Type 2</th>
      <th colspan="3"></th>
    </tr>

    <% @pokemons.each do |pokemon| %>
      <tr>
        <td><%= pokemon.pokename %></td>
        <td><%= pokemon.poketype1 %></td>
        <td><%= pokemon.poketype2 %></td>
        <td><%= link_to 'Show', pokemon_path(pokemon) %></td>
        <td><%= link_to 'Edit', edit_pokemon_path(pokemon) %></td>
        <td><%= link_to 'Destroy', pokemon_path(pokemon),
                  method: :delete,
                    data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>
</body>
