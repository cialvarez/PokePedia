<%= form_for @pokemon do |f| %>

  <% if @pokemon.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@pokemon.errors.count, "error") %> prevented this pokemon from being created:
      </h2>
      <ul>
        <% @pokemon.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :pokename %>
  </p>

  <p>
    <%= f.label 'type 1' %><br>
    <%= f.text_field :poketype1 %>
  </p>

  <p>
    <%= f.label 'type 2' %><br>
    <%= f.text_field :poketype2 %>
  </p>

  <p>
    <%= f.label 'move 1' %><br>
    <%= f.text_field :pokemove1 %>
  </p>

  <p>
    <%= f.label 'move 2' %><br>
    <%= f.text_field :pokemove2 %>
  </p>

  <p>
    <%= f.label 'move 3' %><br>
    <%= f.text_field :pokemove3 %>
  </p>

  <p>
    <%= f.label 'move 4' %><br>
    <%= f.text_field :pokemove4 %>
  </p>

  <p>
    <%= f.label 'weakness 1' %><br>
    <%= f.text_field :pokeweakness1 %>
  </p>

  <p>
    <%= f.label 'weakness 2' %><br>
    <%= f.text_field :pokeweakness2 %>
  </p>

  <p>
    <%= f.submit %>
  </p>

  <% end %>
